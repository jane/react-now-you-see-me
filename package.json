{
  "name": "react-in-view",
  "description": "A react component for determining when it is within a given threshold of the viewport",
  "version": "1.0.0",
  "author": "Cory Brown <oh.wise.man@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "babel -Dd lib src",
    "prebuild": "npm t",
    "preversion": "npm run build",
    "test": "npm run test:lint && npm run test:jest",
    "test:jest": "jest",
    "test:lint": "eslint -c .eslintrc.json src"
  },
  "homepage": "https://github.com/jane/react-in-view#readme",
  "repository": {
    "type": "git",
    "url": "git@github.com:jane/react-in-view.git"
  },
  "bugs": "https://github.com/jane/react-in-view/issues",
  "keywords": [
    "react",
    "viewport"
  ],
  "dependencies": {
    "lodash.debounce": "4.0.8"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-eslint": "8.2.1",
    "babel-jest": "22.1.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-react-remove-prop-types": "0.4.12",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-3": "6.24.1",
    "babel-register": "6.26.0",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "enzyme-to-json": "3.3.1",
    "eslint": "4.16.0",
    "eslint-config-jane": "0.7.3",
    "eslint-plugin-babel": "4.1.2",
    "eslint-plugin-jest": "21.7.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-promise": "3.6.0",
    "eslint-plugin-react": "7.5.1",
    "eslint-plugin-unicorn": "3.0.1",
    "jest": "22.1.4",
    "prop-types": "15.6.0",
    "react": "16.2.0",
    "react-addons-test-utils": "15.6.2",
    "react-dom": "16.2.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/config/jest-setup.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(lib|node_modules)/"
    ],
    "testEnvironment": "jsdom",
    "testRegex": "\\.test\\.js$",
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text",
      "json"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**"
    ]
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0"
  }
}
